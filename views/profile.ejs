<%- include('partials/header') %>
    <%- include('partials/userNav') %>

        <div class="container">
            <h2 class="text-center m-3"> Edit Profiles Details:</h2>
            <p class="text-center" style="color: aliceblue;">
                <%= message %>
            </p>
            <form action="/user/profile" method="post">
                <label for="fname">F Name:</label>
                <input type="text" id="fname" name="fname" value="<%= profileData.fname %>" required>

                <label for="lname">L Name:</label>
                <input type="text" id="lname" name="lname" value="<%= profileData.lname %>" required>

                <label for="email">Email:</label>
                <input type="text" id="email" name="email" value="<%= profileData.email %>" required>

                <label for="contactNumber">Contact Number:</label>
                <input type="number" id="contactNumber" name="contactNumber" value="<%= profileData.contactNumber %>"
                    required>

                <label for="address">Address:</label>
                <input type="text" id="address" name="address" value="<%= profileData.address %>" required>

                <label for="password">Old Password:</label>
                <input type="text" id="password" name="oldPassword">

                <label for="password1">New Password:</label>
                <input type="text" id="password1" name="newPassword">

                <div class="d-flex justify-content-center">
                    <button type="submit" class="m-2 p-2">Save Changes</button>
                </div>
            </form>

        </div>
        <%- include('partials/footer') %>
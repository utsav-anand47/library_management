<%- include('partials/header') %>
    <%- include('partials/adminNav') %>

        <div class="container my-3">
            <div class="adminTable">
                <h3 class="text-center m-3">Add New Book</h3>
                <div class="adminAddSpace"></div>
                <form action="/admin/add-book" method="post" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="title" class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            <input type="text" name="title" required class="form-control" id="addBookTitle"
                                placeholder="Title...">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Author" class="col-sm-2 col-form-label">Author</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" required class="form-control" id="addBookAuthor"
                                placeholder="Author...">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Author" class="col-sm-2 col-form-label">Book Number</label>
                        <div class="col-sm-10">
                            <input type="text" name="bookNumber" required class="form-control" id="addBookPublisher"
                                placeholder="Book Number...">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="bookimg" class="col-sm-2 col-form-label">Book Image(if any)</label>
                        <div class="col-sm-10">
                            <input type="file" accept="Image/*" name="img" required class="form-control" id="bookimg"
                                placeholder="Book Image...">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Author" class="col-sm-2 col-form-label">Total Copies</label>
                        <div class="col-sm-10">
                            <input type="number" name="totalCopies" required class="form-control" id="addBookPublisher"
                                placeholder="Total Copies...">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Author" class="col-sm-2 col-form-label">Genre</label>
                        <div class="col-sm-10">
                            <input type="text" name="genre" class="form-control" id="addBookPublisher"
                                placeholder="Genre...">
                        </div>
                    </div>
                    <div class="submit_bttns">
                        <button class="cancel" type="reset">Reset</button>
                        <button type="submit" class="update">Add Book</button>
                    </div>

                </form>

            </div>
        </div>


        <%- include('partials/footer') %>
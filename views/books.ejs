<%- include('partials/header') %>

    <div class="table_container table-responsive" style="padding: 110px 93px;">
        <h2 class="text-center">Available Books</h2>

        <div class="album py-5 bg-body-tertiary">
            <div class="container">

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                    <% books.forEach(book=> { %>
                        <div class="col" style="max-width: 300px;&:hover{scale: 1.2;}">
                            <div class="card shadow-sm">
                                <div class="d-flex justify-content-center px-3 py-2">
                                    <% if(book.imgUrl) { %>
                                        <img src="<%= book.imgUrl %>" alt=""
                                            style="background-size: 100% 100%; height: 180px;object-fit: contain;">
                                        <% } else { %>
                                            <img src="/assets/book.png" alt=""
                                                style="background-size: 100% 100%; height: 180px;object-fit: contain;">
                                            <% } %>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        name : <%= book.title %>
                                    </p>
                                    <p class="card-text">
                                        Author : <%= book.author %>
                                    </p>
                                    <p class="card-text">
                                        Book Number : <%= book.bookNumber %>
                                    </p>
                                    <p class="card-text">
                                        Available Copies : <%= book.availableCopies %>
                                    </p>
                                    <div class="d-flex justify-content-center align-items-center">
                                        <form action="/user/addtocart" method="post">
                                            <input type="hidden" name="bookId" value="<%= book._id %>">
                                            <button class="btn btn-primary" type="submit"><strong>Add to
                                                    cart</strong></button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>


                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>